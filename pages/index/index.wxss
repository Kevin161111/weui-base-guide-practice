}
.mc{
  font-size:17px;
  padding:37rpx;
}
.menu{
  background-color:#ffffff;
  margin:17rpx;
  height: 100%;
}

.menu-item{
  margin:9rpx 17rpx;
  height: 57rpx;
  line-height:57rpx;
  text-align: justify;
  border-bottom: solid 1rpx #ececec;
}

.menu-item-inx {
  margin-bottom: 17rpx;
  border-bottom:none;
  opacity: 0.4;
}

image.menu-icon {
  width:37rpx;
  height:37rpx;
  float:right;
  padding:13rpx;
}

.menu-sub-item-icon{
  content: " ";
  display: block;
  height: 12rpx;
  width: 12rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #C8C8CD;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}


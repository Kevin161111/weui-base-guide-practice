/** common_form.wxss **/

page {
    height: 100%;
}
.container {
    padding: 0;
    font-size: 34rpx;
    background: #efeff4;
}

.content.gap-top {
    padding-top: 20rpx;
}

.section {
    background: #ffffff;
}

.section-row {
    display: flex;
    align-items: center;
    padding: 0 30rpx;
    border-bottom: 2rpx solid #f3f3f3;
}

.section:last-child .section-row{
    border: 0;
}

.section.btn-area {
    background: inherit;
    margin-top: 60rpx;
}

.btn-area button {
    width: 100%;
}

.col {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 86rpx;
}

.col1 {
    min-width: 152rpx;
    margin-right: 30rpx;
}

.col2 {
    width: 100%;
    
}

.bd-right {
    border-right: 2rpx solid #f3f3f3;
}

.col-icon {
    width: 16rpx;
    height: 25rpx;
}

.plh {
    color: #d5d5d5;
    font-size: 34rpx;
}